{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "pnpm run build-registry",
        "outputDirectory": "public/r",
        "distDir": "public/r"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "pnpm run build",
        "outputDirectory": "dist",
        "distDir": "dist"
      }
    },
    {
      "src": "storybook-static/**",
      "use": "@vercel/static",
      "config": {
        "buildCommand": "cp -r public/r/* dist/r/ && pnpm run build-storybook",
        "outputDirectory": "storybook-static",
        "distDir": "storybook-static"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/storybook",
      "dest": "/storybook-static/index.html"
    },
    {
      "src": "/storybook/index.html",
      "dest": "/storybook-static/index.html"
    },
    {
      "src": "/storybook/(.*)",
      "dest": "/storybook-static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}